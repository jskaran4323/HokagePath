# PULL THE DOWNLOAD
FROM node:22 
# SET WORKING DIRECTORY
WORKDIR /usr/src/app
# COPIED MODULES NEEDED
COPY package*.json ./
# INSTALL NPM INSIDE CONTAINER
RUN npm install --build-from-source
# COPIED ENTRIE PROJECT
COPY . .
# EXPORT THE PORT
EXPOSE 5173
# DEVELOPMENT COMMAND
CMD [ "npm" , "run", "dev" ]